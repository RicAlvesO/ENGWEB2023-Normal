extends layout 
block content 
    w3.card-4 
        header.w3-container.w3-teal 
            h1= planta["Nome Científico"]
            h2= planta._id
        .w3-container 
            p Número de Registo: #{planta["Número de Registo"]}
            p Código de rua: #{planta["Código de rua"]}
            p Rua: #{planta.Rua}
            p Local: #{planta.Local}
            p Freguesia: #{planta.Freguesia}
            p Espécie: #{planta.Espécie}
            p Nome Científico: #{planta["Nome Científico"]}
            p Origem: #{planta.Origem}
            p Data de Plantação: #{planta["Data de Plantação"]}
            p Estado: #{planta.Estado}
            p Caldeira: #{planta.Caldeira}
            p Tutor: #{planta.Tutor}
            p Implantação: #{planta.Implantação}
            p Gestor: #{planta.Gestor}
            p Data de actualização: #{planta["Data de actualização"]}
            p Número de Intervenções: #{planta["Número de intervenções"]}
            button 
                a(href='/') Inicio             
        
        footer.w3-container.w3-teal 
            h5 Generated by Ricardo Oliveira::EngWeb2023 in #{d}
            